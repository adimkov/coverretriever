<UserControl x:Class="CoverRetriever.View.FileConductorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:CoverRetriever.Controls" 
             xmlns:resources="clr-namespace:CoverRetriever.Resources" xmlns:converter="clr-namespace:CoverRetriever.Converter" mc:Ignorable="d" 
             MinHeight="190" d:DesignWidth="405" >
    <UserControl.Resources>
        <resources:CoverRetrieverResourcesWrapper x:Key="coverRetrieverResources"/>
        <converter:CoverToImageConverter x:Key="coverToImageConverter"/>
        <converter:CoverRecipientToBoolConverter x:Key="coverRecipientToBoolConverter"/>
                        
        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="136" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="180" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="35.1066666666667" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <CheckBox x:Name="embedCheckBox" IsChecked="{Binding Path=Recipient, Mode=TwoWay, Converter={StaticResource coverRecipientToBoolConverter}}" 
                  Content="{Binding CoverRetrieverResources.FlagEmbedCover, Source={StaticResource coverRetrieverResources}}" 
                  HorizontalAlignment="Left" 
                  VerticalAlignment="Center"/>
        <StackPanel Visibility="{Binding ElementName=embedCheckBox, Path=IsChecked, Converter={StaticResource boolToVisibilityConverter}}" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal">
            <CheckBox IsChecked="{Binding Path=ApplyToAllFiles, Mode=TwoWay}" 
                      Content="{Binding CoverRetrieverResources.FlagApplyToAll, Source={StaticResource coverRetrieverResources}}" 
                      VerticalAlignment="Center"/>
        </StackPanel>
        <TextBlock Text="{Binding CoverRetrieverResources.TextTrackName, Source={StaticResource coverRetrieverResources}}" Grid.Row="1" Grid.Column="1" Style="{DynamicResource ContentTextStyle}"/>
        <TextBox x:Name="textBox" Text="{Binding Path=SelectedAudio.TrackName, Mode=OneWay}"  
                         Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" IsReadOnly="True"/>
        <TextBlock Text="{Binding CoverRetrieverResources.TextArtist, Source={StaticResource coverRetrieverResources}}" Style="{DynamicResource ContentTextStyle}" Grid.Row="2" Grid.Column="1"/>
        <TextBox Text="{Binding Path=SelectedAudio.Artist, Mode=OneWay}" 
                        Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" IsReadOnly="True"/>
        <TextBlock Text="{Binding CoverRetrieverResources.TextAlbum, Source={StaticResource coverRetrieverResources}}" Style="{DynamicResource ContentTextStyle}" Grid.Row="3" Grid.Column="1"/>
        <TextBox Text="{Binding Path=SelectedAudio.Album, Mode=OneWay}" 
                 Grid.Column="2" Grid.Row="3" VerticalAlignment="Center" IsReadOnly="True"/>
        <TextBlock Text="{Binding CoverRetrieverResources.TextYear, Source={StaticResource coverRetrieverResources}}" Style="{DynamicResource ContentTextStyle}"
                   Margin="0" 
                   Grid.Column="1" Grid.Row="4"/>
        <TextBox Text="{Binding Path=SelectedAudio.Year, Mode=OneWay}"
                 Grid.Column="2" Grid.Row="4" HorizontalAlignment="Left" Width="45" VerticalAlignment="Center" IsReadOnly="True"/>
        <Border DataContext="{Binding }" Grid.Row="1" VerticalAlignment="Top" Grid.RowSpan="4" HorizontalAlignment="Left">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="5"/>
            </Border.Effect>
            <Grid Width="128" Height="128">
                <Image Source="/CoverRetriever;component/Assets/Shell_NoCover.png" 
                            Visibility="{Binding Path=SelectedAudioCover, Converter={StaticResource nullToVisibilityConverter}}" />
                <Image x:Name="CurrentCoverImage" controls:ImageAsyncSource.AsyncSource="{Binding Path=SelectedAudioCover, Converter={StaticResource coverToImageConverter}}" 
                            Visibility="{Binding Path=SelectedAudioCover, Converter={StaticResource notNullToVisibilityConverter}}" Margin="0,-1,0,1" />
            </Grid>
        </Border>
        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,6,0,0"
                    Visibility="{Binding Path=SelectedAudioCover, Converter={StaticResource notNullToVisibilityConverter}}" d:LayoutOverrides="GridBox">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding CoverRetrieverResources.TextCoverSixeWidth, Source={StaticResource coverRetrieverResources}}" Style="{DynamicResource ContentTextStyle}"/>
                <TextBlock Text="{Binding Path=SelectedAudioCover.CoverSize.Width}" Style="{DynamicResource ContentTextStyle}" Margin="2,0,8,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding CoverRetrieverResources.TextCoverSixeHeight, Source={StaticResource coverRetrieverResources}}" Style="{DynamicResource ContentTextStyle}"/>
                <TextBlock Text="{Binding Path=SelectedAudioCover.CoverSize.Height}" Style="{DynamicResource ContentTextStyle}" Margin="2,0,8,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
